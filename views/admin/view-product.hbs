<section>
  <div class="container">
    <div class="row">
      <div class="col-md-12  ">
        <a href="/admin/add-product" class="btn btn-success  mt-5">Add Product</a>
      </div>
      <div class="col-md-12">
        <table class="table mt-5" id="table_id">
          <thead>
            <tr>
              <th scope="col">No</th>
              <th scope="col">Name</th>
              <th scope="col">Category</th>
              <th scope="col">Description</th>
              <th scope="col">image</th>
              <th scope="col">option</th>
            </tr>
          </thead>
          <tbody>
            {{#each product}}
            <tr>
              <th scope="row">1</th>
              <td>{{this.Name}}</td>
              <td>{{this.Category}}</td>
              <td>{{this.Discription}}</td>
              <td><img style="width: 50px;height: 50px" src="product-images/{{this._id}}.jpg" alt="Mobiles"></td>
              <td>
                <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
                <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
                  onclick="return confirm('Are you want to delete {{this.Name}}')">Delete</a>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>

  </div>
</section>

<script>
  $(document).ready(function () {
    $('#table_id').DataTable();
  });
</script>